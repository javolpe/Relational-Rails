<h1>Dealership's Vehicles</h1>

<% @autos.each do |auto| %>
  <h4><a href="/vehicles/<%= auto.id %>"><%= auto.name =%></a></h4>
  <ul>
    <li>Passenger Limit: <%= auto.passenger_limit %></li>
    <li>Automatic Tranmission: <%= auto.auto_transmission %></li>
    <li>Vehicle Id: <%= auto.id %></li>
    <li>Created At: <%= auto.created_at %></li>
    <li>Updated At:<%= auto.updated_at %></li>
    <a href="/vehicles/<%= auto.id %>/edit">Update Vehicle</a><br><br>
    <form action="/vehicles/<%= auto.id %>" method="POST">
      <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
      <input type="hidden" name="_method" value="DELETE">
      <input type="submit" value="delete"/>
  </form>
  </ul>
<% end %>
 <p><a href="/dealerships/<%= @dealership_id %>/autos/new_auto">New Vehicle</a></p><br><br>

 <form action="/dealerships/<%= @dealership_id %>/autos/" method="get">
  <label for="limits">Minimum Passengers for vehicle: </label>
  <input type="number" name="limits" id="limits">
  <input type="submit">
</form>

 <p><%= link_to "Alphabetize", "/dealerships/#{@dealership_id}/autos?alpha=sort" %></p>
