<form action="/vehicles/<%= @vehicle.id %>" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <input type="hidden" name="_method" value="PATCH" />
  <p>Edit</p>
  <label for="name">Vehicle Name</label><br>
  <input type='text' name='vehicle[name]' value="<%= @vehicle.name %>"/><br/>
  <label for="passenger_limit">Passenger Limit: </label><br>
  <input type="number" name="vehicle[passenger_limit]" id="passenger_limit"/><br>
  <label for="auto_transmission">Is it an automatic transmission?</label><br>
  <input type="checkbox" name="vehicle[auto_transmission]" id="auto_transmission"/><br>
  <input type="submit"/>
</form>
